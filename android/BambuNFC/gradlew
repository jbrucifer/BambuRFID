#!/bin/sh
# Gradle wrapper script â€” downloads Gradle automatically
# Generated for BambuNFC

APP_NAME="Gradle"
APP_BASE_NAME=$(basename "$0")
DEFAULT_JVM_OPTS='"-Xmx64m" "-Xms64m"'

DIRNAME=$(dirname "$0")
APP_HOME=$(cd "$DIRNAME" && pwd -P)

CLASSPATH=$APP_HOME/gradle/wrapper/gradle-wrapper.jar

# Determine the Java command to use
if [ -n "$JAVA_HOME" ] ; then
    JAVACMD="$JAVA_HOME/bin/java"
else
    JAVACMD="java"
fi

# Check Java
if ! command -v "$JAVACMD" > /dev/null 2>&1 ; then
    echo "ERROR: JAVA_HOME is not set and no 'java' command could be found." >&2
    echo "Please set the JAVA_HOME variable to match the location of your Java installation." >&2
    exit 1
fi

exec "$JAVACMD" $DEFAULT_JVM_OPTS \
    -classpath "$CLASSPATH" \
    org.gradle.wrapper.GradleWrapperMain "$@"
