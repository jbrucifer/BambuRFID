<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1F2937">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BambuNFC Bridge"
        android:textSize="24sp"
        android:textColor="#34D399"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not connected"
        android:textColor="#9CA3AF"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/serverInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Server IP:Port (e.g. 192.168.1.100:8000)"
            android:textColor="#E5E7EB"
            android:textColorHint="#6B7280"
            android:background="#374151"
            android:padding="12dp"
            android:textSize="14sp"
            android:inputType="text"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/connectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:backgroundTint="#059669"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#374151"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log"
        android:textColor="#9CA3AF"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#111827"
        android:padding="8dp">

        <TextView
            android:id="@+id/logText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#D1D5DB"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:text="" />
    </ScrollView>

</LinearLayout>
